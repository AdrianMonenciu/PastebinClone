<h2 class="page-header">Search Pastes</h2>
<form action="/pastebin" method="GET"> 
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>"> 
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>

</form>
<br>
<% pastes.forEach(paste => { %>  
    <div class="pastebin-row">
        <div class="pastebin-title"><%= paste.title %> </div>  
        <div class="pastebin-description"><%= paste.description %> </div> 
        <div class="btn-row">
            <a class="btn btn-primary" href="/pastebin/<%= paste.id %>">View</a>
            <button class="btn btn-primary" onclick="copyToClipboard('<%= paste.description %>')">Copy</button>  
            <a class="btn btn-primary" href="/pastebin/<%= paste.id %>/edit">Edit</a>
            <form method="POST" action="/pastebin/<%= paste.id %>?_method=DELETE">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
        </div>
    </div>
<% }) %> 